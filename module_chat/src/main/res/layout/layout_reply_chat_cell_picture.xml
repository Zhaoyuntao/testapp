<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:minHeight="45dp"
    android:orientation="horizontal"
    tools:background="#ff9999">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <im.thebot.common.UserNameView
            android:id="@+id/reply_cell_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/reply_cell_image_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="3dp"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:padding="0dp"
            android:textSize="12dp"
            android:visibility="visible" />
    </LinearLayout>

    <im.thebot.chat.ui.view.ChatImageView
        android:id="@+id/reply_cell_image_image_view"
        android:layout_width="52dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@null" />
</LinearLayout>