<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_view_new_message_count_container"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/grey10_19000000_15">

    <TextView
        android:id="@+id/text_view_new_message_count"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_cell_bubble_unread_message_title"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/color_chat_cell_unread_message_title"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="@string/chats_listview_messagenumber" />

</FrameLayout>