<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView_chat_new_message">
        <item name="android:minWidth">20dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/shape_round_rect_green_03_10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_chat_cell_text_text_color</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="imageView_chat_new_message">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:elevation">1dp</item>
    </style>
</resources>