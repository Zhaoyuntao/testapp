<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.Activity_94_wallpaper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/container_recycler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#99000000"
                android:gravity="center"
                android:text="RecyclerView"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/window_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#55000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_list_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#99000000"
                android:gravity="center"
                android:text="ListView"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ListView
                android:id="@+id/window_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="1px"
                android:layout_weight="1"
                android:background="#55000000" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <base.ui.AutoSizeTextView
            android:id="@+id/recycler_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="RecyclerView"
            android:textColor="@color/white" />

        <base.ui.AutoSizeTextView
            android:id="@+id/list_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="ListView"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>