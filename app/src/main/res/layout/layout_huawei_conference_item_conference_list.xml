<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="#000000"
            android:text="2020-03-16"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:textDirection="locale" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="@color/yc_color_1CC964_CPN"
            android:textSize="14sp"
            android:text="The power of Mike"
            android:textAlignment="viewStart"
            android:textDirection="locale" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="#808080"
            android:textSize="14sp"
            android:text="Organizer:Mike"
            android:textAlignment="viewStart"
            android:textDirection="locale" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:textColor="#808080"
            android:textSize="14sp"
            android:text="Conference ID:12831"
            android:textAlignment="viewStart"
            android:textDirection="locale" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_huawei_meeting_button_bottom_blue_round_corner"
            android:padding="3dp"
            android:text="JOIN"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textDirection="locale"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>