<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activity.Activity_95_textview">

    <im.thebot.chat.ui.view.BubbleHorizontalLinearLayout
        android:id="@+id/bubble_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#ff9988"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:tag="1" />

    <im.thebot.chat.ui.view.BubbleHorizontalLinearLayout
        android:id="@+id/bubble_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#9988ff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:tag="2" />

    <im.thebot.chat.ui.view.BubbleHorizontalLinearLayout
        android:id="@+id/bubble_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#99ff88"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:tag="3" />

    <im.thebot.chat.ui.view.BubbleHorizontalLinearLayout
        android:id="@+id/bubble_layout_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#99ffff"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="10dp"
        android:tag="4" />

    <im.thebot.chat.ui.view.BubbleHorizontalLinearLayout
        android:id="@+id/bubble_layout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#ff88ff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:tag="5" />

    <im.thebot.chat.ui.view.BubbleHorizontalLinearLayout
        android:id="@+id/bubble_layout_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#ffff88"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="10dp"
        android:tag="6" />

    <EditText
        android:id="@+id/edit_text_hello"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:textColor="@color/red" />
</LinearLayout>