<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99ff99"
    android:gravity="center"
    android:orientation="vertical">

    <im.turbo.baseui.progress.TProgressView
        android:id="@+id/loading"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:TProgressView_drawablePadding="-10dp"
        app:TProgressView_strokeColor="#ff6666" />

    <im.turbo.baseui.progress.TProgressView
        android:id="@+id/loading2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:paddingStart="50dp"
        android:paddingEnd="0dp"
        android:visibility="gone"
        app:TProgressView_strokeColor="#00ff00"
        app:TProgressView_strokeColorBack="#9999ff"
        app:TProgressView_strokeRound="false"
        app:TProgressView_strokeShadowColor="#000000"
        app:TProgressView_strokeWidth="30dp" />

    <im.turbo.baseui.progress.TProgressView
        android:id="@+id/loading3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:padding="5dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/progress_touch"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="progress"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <base.ui.AutoSizeTextView
            android:id="@+id/mode_init"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:singleLine="true"
            android:text="init"
            android:textColor="@color/white" />

        <base.ui.AutoSizeTextView
            android:id="@+id/mode_waiting"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:singleLine="true"
            android:text="waiting"
            android:textColor="@color/white" />

        <base.ui.AutoSizeTextView
            android:id="@+id/mode_downloading"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:singleLine="true"
            android:text="downloading"
            android:textColor="@color/white" />

        <base.ui.AutoSizeTextView
            android:id="@+id/mode_success"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:text="Success"
            android:textColor="@color/white" />

        <base.ui.AutoSizeTextView
            android:id="@+id/mode_failed"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:text="failed"
            android:textColor="@color/white" />

        <base.ui.AutoSizeTextView
            android:id="@+id/mode_canceled"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:gravity="center"
            android:text="canceled"
            android:textColor="@color/white" />


    </LinearLayout>
</LinearLayout>