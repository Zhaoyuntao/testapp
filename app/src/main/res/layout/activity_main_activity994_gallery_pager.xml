<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Title"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_pager_cash_gift_theme"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.3"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/theme_name_view_cash_gift_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_round_rect_grey08_19dp"
        android:gravity="center"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:textColor="@color/orange"
        android:textSize="16sp"
        tools:text="Best Wishes" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1.7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/theme_apply_view_cash_gift_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/widget_orange_05_round_4"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="150dp"
        android:paddingStart="14dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="use"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>