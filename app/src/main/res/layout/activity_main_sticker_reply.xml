<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity_97_textview_spannable">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sticker_test_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:background="#66ccff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_add1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="😊" />

        <Button
            android:id="@+id/button_add2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="😄" />

        <Button
            android:id="@+id/button_add3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="👌" />

        <Button
            android:id="@+id/button_add4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="🐶" />

        <Button
            android:id="@+id/button_add5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="0dp"
            android:text="⬆️" />

        <Button
            android:id="@+id/button_init"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Init" />

    </LinearLayout>


</FrameLayout>