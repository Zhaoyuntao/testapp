<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".activity.Activity_95_imageview">

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/black"
        android:padding="2dp">

        <im.turbo.baseui.roundcornerlayout.RoundCornerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:RoundCornerFrameLayout_radius="10dp">

            <ImageView
                android:id="@+id/imageview_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/wallpaper2" />
        </im.turbo.baseui.roundcornerlayout.RoundCornerFrameLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:padding="2dp">

        <im.turbo.baseui.roundcornerlayout.RoundCornerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:RoundCornerFrameLayout_radius="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imageview_3"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />
        </im.turbo.baseui.roundcornerlayout.RoundCornerFrameLayout>

    </FrameLayout>


    <ImageView
        android:id="@+id/imageview_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wallpaper2" />
</LinearLayout>