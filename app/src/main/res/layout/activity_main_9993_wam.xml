<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.test.test3app.a.wam.canvas.CanvasView
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.618:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/progress_touch_power"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="power"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/progress_touch_f"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="friction"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/progress_touch_g"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="gravity"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/progress_touch_angle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="angle"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/progress_touch_e"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="elasticity"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/progress_touch_slow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ff0000"
        android:gravity="center"
        android:text="slow:1"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <com.test.test3app.textview.AutoSizeTextView
        android:id="@+id/once_push"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="#0000ff"
        android:gravity="center"
        android:text="once power"
        android:textColor="@color/white" />
</LinearLayout>