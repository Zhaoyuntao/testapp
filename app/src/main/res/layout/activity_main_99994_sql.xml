<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/black">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view_result_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/black"
            android:textSize="12sp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_insert_result_table_short"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@color/black"
                android:padding="5dp"
                android:text="Short table"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_insert_result_table_long"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="1px"
                android:background="#000000"
                android:padding="5dp"
                android:text="Long table"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_insert_result_table_mix"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="1px"
                android:background="#000000"
                android:padding="5dp"
                android:text="Mix table"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_insert_table_short"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="#ff0000"
                android:gravity="center"
                android:padding="5dp"
                android:text="Insert table short"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_insert_table_long"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="#ff0000"
                android:gravity="center"
                android:padding="5dp"
                android:text="Insert table long"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_insert_table_mix"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="#ff0000"
                android:gravity="center"
                android:padding="5dp"
                android:text="Insert table mix"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_search_like"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="#ff0000"
                android:gravity="center"
                android:text="like all"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_insert_result_fts_short"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#000066"
                android:padding="5dp"
                android:text="Short fts"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_insert_result_fts_long"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="1px"
                android:background="#000066"
                android:padding="5dp"
                android:text="Long fts"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/view_insert_result_fts_mix"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="1px"
                android:background="#000066"
                android:padding="5dp"
                android:text="Mix fts"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_insert_fts_short"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="#0044ff"
                android:gravity="center"
                android:padding="5dp"
                android:text="Insert fts short"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_insert_fts_long"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#0044ff"
                android:gravity="center"
                android:padding="5dp"
                android:text="Insert fts long"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_insert_fts_mix"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#0044ff"
                android:gravity="center"
                android:padding="5dp"
                android:text="Insert fts mix"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />

            <base.ui.AutoSizeTextView
                android:id="@+id/view_search_fts"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_margin="5dp"
                android:background="#0044ff"
                android:gravity="center"
                android:padding="5dp"
                android:text="fts all"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:autoRadius="20dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/search_content"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#efefef"
        android:gravity="center_vertical"
        android:hint="Input search content."
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:singleLine="true"
        android:text="You"
        android:textSize="26dp" />
</LinearLayout>